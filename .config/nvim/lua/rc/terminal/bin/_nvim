#!/usr/bin/env bash

case $1 in
    -e) OPENER="TEdit"
        shift
        ;;
    -v) OPENER="TVsplit"
        shift
        ;;
    -s) OPENER="TSplit"
        shift
        ;;
    * ) OPENER="TEdit"
        ;;
esac
# echo "opener:$OPENER , files:$*"

if [ -t 0 ]; then
    nvim --server "$PARENT_NVIM_ADDRESS" --remote-send "<Cmd>$OPENER $*<CR>"
else
    # when stdin piped
    tmp=$(mktemp)
    cat - > "$tmp"
    nvim --server "$PARENT_NVIM_ADDRESS" --remote-send "<Cmd>$OPENER $tmp | au VimLeave * !rm $tmp<CR>"
fi

